<h2>Add Apartment</h2>

<%= form_for @apartment do |ap| %>
  <div class="field">
    <%= ap.label :name %><br />
    <%= ap.text_field :name, autofocus: true %>
  </div>
  <div class="field">
    <%= ap.label :owner_name %><br />
    <%= ap.text_field :owner%>
  </div>
  <div class="field">
    <%= ap.label :builder_name %><br />
    <%= ap.text_field :builder%>
  </div>
  <div class="field">
    <%= ap.label :address %><br />
    <%= ap.text_area :address%>
  </div>
  <div class="field">
    <%= ap.label :locality %><br />
    <%= ap.text_field :locality%>
  </div>
  <div class="field">
    <%= ap.label :city %><br />
    <%= ap.text_field :city%>
  </div>
  <div class="field">
    <%= ap.label :postcode %><br />
    <%= ap.number_field :postcode%>
  </div>
  <div class="field">
    <%= ap.label :state %><br />
    <%= ap.text_field :state%>
  </div>
  <div class="field">
    <%= ap.label :country %><br />
    <%= ap.text_field :country%>
  </div>
  <div class="field">
    <%= ap.label :phone %><br />
    <%= ap.phone_field :phone%>
  </div>
  <div class="actions">
    <%= ap.submit "Add" %>
  </div>
<% end %>