<div class="">
  <h1><small>Edit floor</small></h1>
</div>
<hr>
<%= form_for @floor, html: {class: "form-horizontal"} do |floor|%>
	<div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-4">
    	<%= floor.text_field :name, autofocus: true, class: "form-control", placeholder: "Name", required: true %>
	  </div>
	</div>
	<div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <%= floor.submit "Update", class: "btn btn-success pull-right" %>
    </div>
  </div>
<%end%>